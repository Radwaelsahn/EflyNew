<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/text_view</item>
        <item name="editTextStyle">@style/EditTextWhiteTheme</item>
        <item name="buttonStyle">@style/button_primary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarTabStyle">@style/AppTabLayout</item>
        <item name="actionBarTabBarStyle">@style/AppTabLayout</item>

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/text_view</item>
        <item name="editTextStyle">@style/EditTextWhiteTheme</item>
        <item name="buttonStyle">@style/button_primary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="actionBarTabStyle">@style/AppTabLayout</item>
        <item name="actionBarTabBarStyle">@style/AppTabLayout</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/textColor</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.ProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/arialroundedmtregular</item>

    </style>

    <style name="EditTextWhiteTheme" parent="Widget.AppCompat.EditText">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <!--rounded_border_shape colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <!--style for main Button-->
    <style name="button_primary">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_curved_primary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arialroundedmtbold</item>
    </style>

    <style name="button_white" parent="button_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_border_shape</item>
    </style>




    <style name="button_secondary" parent="button_primary">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--style for Main text view-->
    <style name="main_text_view">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--style for normal text view-->
    <style name="text_view_large" parent="text_view">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="text_view_small" parent="text_view">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!--style for tiny text view-->
    <style name="tiny_text_view" parent="text_view">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <style name="text_view_white" parent="text_view">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_view_white_bold" parent="text_view_bold">
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="text_view">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/arialroundedmtregular</item>
        <!--<item name="android:layout_marginTop">@dimen/_16sdp</item>-->
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="text_view_bold" parent="text_view">
        <item name="android:fontFamily">@font/arialroundedmtbold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_larger" parent="text_view">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_larger_bold" parent="text_view_bold">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_large_bold" parent="text_view_bold">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_view_light" parent="text_view">
        <item name="android:textColor">@color/textColorLight</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/bg_curved_white</item>-->
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/bg_curved_white</item>-->
    </style>

    <style name="DeliveryTimeTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/toolbar
        </item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIconTint">@color/colorPrimary</item>
        <item name="tabTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/toolbar</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

</resources>
